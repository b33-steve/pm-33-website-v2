{
  "name": "pm33-marketing-site",
  "version": "2.0.0",
  "description": "PM33 Marketing Website - Clean marketing site that integrates with core PM33 app",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3025",
    "build": "npm run build:clean && npm run build:optimize",
    "build:clean": "rm -rf .next out",
    "build:optimize": "NODE_ENV=production next build",
    "build:analyze": "ANALYZE=true npm run build:optimize",
    "build:standalone": "npm run build:optimize && npm run build:copy-standalone",
    "build:copy-standalone": "cp -r .next/standalone/* ./dist/ && cp -r .next/static ./dist/.next/static && cp -r public ./dist/",
    "start": "next start -p 3025",
    "start:prod": "NODE_ENV=production PORT=3025 node server.js",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "test": "playwright test",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:integration": "playwright test tests/integration/",
    "test:e2e": "playwright test tests/e2e/",
    "test:performance": "playwright test tests/performance/",
    "test:accessibility": "playwright test tests/accessibility/",
    "test:design-system": "playwright test tests/design-system/",
    "test:comprehensive": "node scripts/test-all.js",
    "test:ci": "CI=true npm run test:comprehensive",
    "test:all": "BASE_URL=http://localhost:3025 node scripts/test-all.js",
    "test:perf": "node scripts/test-performance.js",
    "analyze": "ANALYZE=true npm run build",
    "validate-deployment": "npm run typecheck && npm run lint && npm run test:comprehensive && npm run build",
    "prepare-release": "npm run validate-deployment && npm run test:perf",
    "docker:build": "docker build -t pm33-marketing:latest .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t pm33-marketing:dev .",
    "docker:run": "docker run -p 3025:3025 pm33-marketing:latest",
    "docker:run:dev": "docker run -p 3025:3025 -v $(pwd):/app pm33-marketing:dev",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "clean": "rm -rf .next out dist node_modules/.cache",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json && npm install"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.18",
    "autoprefixer": "^10.4.16",
    "framer-motion": "^10.0.0",
    "geist": "^1.5.1",
    "lighthouse": "^12.8.2",
    "next": "^14.2.32",
    "postcss": "^8.4.31",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@next/bundle-analyzer": "^14.2.33",
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "clsx": "^2.1.1",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "tailwind-merge": "^3.3.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
