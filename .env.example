# PM33 Marketing Site - Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# CORE APPLICATION SETTINGS
# ============================================

# Core App Configuration
NEXT_PUBLIC_CORE_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3025
NEXT_PUBLIC_COOKIE_DOMAIN=.pm33.local

# Environment Configuration
NODE_ENV=development
NEXT_PUBLIC_ENV=development

# ============================================
# AUTHENTICATION SETTINGS
# ============================================

# Authentication Cookie Configuration
PM33_AUTH_COOKIE_NAME=pm33_auth_token
PM33_AUTH_COOKIE_SECURE=false
PM33_AUTH_COOKIE_HTTP_ONLY=true
PM33_AUTH_COOKIE_SAME_SITE=lax

# ============================================
# ANALYTICS & TRACKING
# ============================================

# Google Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_ANALYTICS_ID=

# Performance Monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# ============================================
# ERROR TRACKING & MONITORING
# ============================================

# Sentry Configuration (Optional)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# Error Reporting Settings
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false

# ============================================
# FEATURE FLAGS
# ============================================

# Development Features
NEXT_PUBLIC_ENABLE_AUTH_DEBUG=false
NEXT_PUBLIC_ENABLE_DEV_TOOLS=false
NEXT_PUBLIC_ENABLE_PREVIEW_MODE=false

# Marketing Features
NEXT_PUBLIC_ENABLE_AB_TESTING=false
NEXT_PUBLIC_ENABLE_WAITLIST=true
NEXT_PUBLIC_ENABLE_EARLY_ACCESS=false

# ============================================
# SECURITY SETTINGS
# ============================================

# Content Security Policy
NEXT_PUBLIC_CSP_NONCE=
CSP_REPORT_URI=

# Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# ============================================
# INTEGRATION SETTINGS
# ============================================

# Email Service (for contact forms)
EMAIL_SERVICE_API_KEY=
EMAIL_FROM_ADDRESS=noreply@pm33.com
EMAIL_TO_ADDRESS=hello@pm33.com

# CMS/Content (if using headless CMS)
CMS_API_URL=
CMS_API_KEY=

# Database (if needed for forms/analytics)
DATABASE_URL=

# ============================================
# DEPLOYMENT SETTINGS
# ============================================

# CDN Configuration
NEXT_PUBLIC_CDN_URL=
NEXT_PUBLIC_ASSET_PREFIX=

# Build Settings
NEXT_TELEMETRY_DISABLED=1
DISABLE_BUNDLE_ANALYZER=true

# ============================================
# STAGING/PRODUCTION OVERRIDES
# ============================================

# These should be set in your deployment platform
# NEXT_PUBLIC_CORE_APP_URL=https://app.pm33.com
# NEXT_PUBLIC_SITE_URL=https://pm33.com
# NODE_ENV=production
# NEXT_PUBLIC_ENV=production